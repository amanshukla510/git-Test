@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu OnEmployeeSelection="OnEmployeeSelection" />
    </div>

    <main>
        <div>
            <MenuBar P_id="@SelectedEmployeesCount"></MenuBar>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code{
    protected int SelectedEmployeesCount { get; set; } = 1;
    protected void OnEmployeeSelection(int i)
    {
        SelectedEmployeesCount = i;
    }
}