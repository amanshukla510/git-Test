<style>
    .aa {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .topnav {
        overflow: hidden;
        background-color: #333;
    }

        .topnav a, .r {
            float: left;
            color: #f2f2f2;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            .topnav a:hover, .r:hover {
                background-color: #ddd;
                color: aquamarine;
            }

            .topnav a.active, r:active {
                background-color: #04AA6D;
                color: white;
            }
</style>
<div class="aa">
    <div class="topnav">
        <span class="topnav r">@P_id</span>
    </div>
</div>

@code {
    [Parameter] public int P_id { get; set; }
}
